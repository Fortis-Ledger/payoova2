# Supabase Configuration
# Copy this file to .env and fill in your actual Supabase credentials

# Supabase Project URL
# Get this from your Supabase project dashboard
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key
# Get this from your Supabase project dashboard > Settings > API
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (for admin operations)
# IMPORTANT: Keep this secret and never expose it in client-side code
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Configuration
DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres

# JWT Secret (for token verification)
JWT_SECRET=your-jwt-secret

# Storage Configuration
SUPABASE_STORAGE_BUCKET=payoova-documents

# External API Keys (if needed)
# Crypto price APIs
COINGECKO_API_KEY=your-coingecko-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BITCOIN_RPC_URL=https://blockstream.info/api

# Card Provider API (if using external service)
CARD_PROVIDER_API_KEY=your-card-provider-api-key
CARD_PROVIDER_BASE_URL=https://api.cardprovider.com

# KYC/AML Service APIs
KYC_PROVIDER_API_KEY=your-kyc-provider-api-key
AML_PROVIDER_API_KEY=your-aml-provider-api-key

# Push Notifications
EXPO_PUSH_TOKEN=your-expo-push-token
FCM_SERVER_KEY=your-fcm-server-key

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
HASH_SALT=your-hash-salt

# Development/Production Environment
NODE_ENV=development
EXPO_PUBLIC_ENV=development

# Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Session Configuration
SESSION_TIMEOUT=3600000
REFRESH_TOKEN_EXPIRY=604800000

# Admin Configuration
ADMIN_EMAIL=admin@payoova.com
ADMIN_PASSWORD=your-secure-admin-password

# Compliance Settings
KYC_REQUIRED_AMOUNT=1000
AML_MONITORING_THRESHOLD=10000
SAR_REPORTING_THRESHOLD=50000

# Card Limits
DEFAULT_DAILY_LIMIT=1000
DEFAULT_MONTHLY_LIMIT=10000
MAX_CARD_BALANCE=50000

# Transaction Limits by KYC Level
BASIC_DAILY_LIMIT=1000
BASIC_MONTHLY_LIMIT=10000
INTERMEDIATE_DAILY_LIMIT=5000
INTERMEDIATE_MONTHLY_LIMIT=50000
ADVANCED_DAILY_LIMIT=25000
ADVANCED_MONTHLY_LIMIT=250000