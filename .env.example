# ==========================================
LOG_LEVEL=INFO
LOG_FILE=logs/payoova.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# ==========================================
# ADMIN SETTINGS
# ==========================================
ADMIN_EMAIL=admin@payoova.com
ADMIN_PASSWORD=change-this-in-production
SUPER_ADMIN_EMAIL=superadmin@payoova.com

# ==========================================
