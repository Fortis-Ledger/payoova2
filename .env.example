# ==========================================
# PAYOOVA 2.0 - COMPLETE ENVIRONMENT SETUP
# ==========================================
# 游릭 = You have this API configured
# 游리 = Optional API (platform works without it)
# 游댮 = Missing API (needed for 100% functionality)

# ==========================================
# BASIC APPLICATION SETTINGS
# ==========================================
APP_BASE_URL=https://payoova.com
APP_DEV_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:5000/api

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=5000
FLASK_ENV=development
DEBUG=true
DEBUG_MODE=false
MAINTENANCE_MODE=false
ENABLE_SWAGGER=true

# ==========================================
# 游릭 DATABASE CONFIGURATION (YOU HAVE)
# ==========================================
# Primary Database - PostgreSQL (Supabase)
DATABASE_URL=postgresql://your_user:your_pass@your_host:5432/your_db
POSTGRES_URL=postgresql://your_user:your_pass@your_host:5432/your_db

# Local Development Database - SQLite
SQLALCHEMY_DATABASE_URI=sqlite:///payoova.db
SQLALCHEMY_TRACK_MODIFICATIONS=false

# ==========================================
# 游릭 SECURITY KEYS (YOU HAVE - CHANGE IN PRODUCTION!)
# ==========================================
SECRET_KEY=generate-new-secret-key-for-production
JWT_ACCESS_SECRET=generate-new-jwt-access-secret
JWT_REFRESH_SECRET=generate-new-jwt-refresh-secret
WALLET_ENCRYPTION_KEY=generate-new-wallet-encryption-key

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=24
JWT_REFRESH_TOKEN_EXPIRES=720
BCRYPT_LOG_ROUNDS=12

# ==========================================
# 游릭 EMAIL SERVICE (YOU HAVE)
# ==========================================
# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=verify@payoova.com

# SMTP Configuration
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=admin@payoova.com
SMTP_PASS=your-smtp-password
SMTP_USE_TLS=true
MAIL_FROM=noreply@payoova.com

# ==========================================
# 游릭 SMS SERVICE (YOU HAVE)
# ==========================================
# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_VERIFY_SERVICE_SID=your-twilio-verify-service-sid

# ==========================================
# 游릭 REDIS CACHE (YOU HAVE)
# ==========================================
# Redis Configuration - Upstash
REDIS_URL=rediss://default:your_password@your_host:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://your-redis-url
RATELIMIT_DEFAULT_REQUESTS=100
RATELIMIT_DEFAULT_WINDOW=900

# ==========================================
# 游릭 BLOCKCHAIN APIs (YOU HAVE)
# ==========================================
# Alchemy Configuration (Recommended)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key
